{
  "name": "InLinked-Backend",
  "version": "0.0.1",
  "description": "Backend for InLinked project",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/swuleung/SJS"
  },
  "author": "SJS",
  "keywords": [
    "typescript",
    "nodejs",
    "backend"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc",
    "build:watch": "rm -rf dist && tsc -w",
    "coverage": "nyc --exclude dist/test --reporter=html npm run test:all",
    "lint": "tslint 'src/**/*.ts' 'test/**/*.test.ts'",
    "start": "node dist/server.js",
    "start:dev": "tsc-watch --onSuccess 'node --inspect=0.0.0.0:5858 dist/server.js'",
    "clean": "rm -rf node_modules",
    "reinstall": "npm run clean && npm install"
  },
  "dependencies": {
    "async": "^2.6.0",
    "bcryptjs": "^2.4.3",
    "joi": "^13.1.2",
    "jsonwebtoken": "^8.2.0",
    "knex": "^0.14.4",
    "mysql2": "^1.5.3"
  },
  "devDependencies": {
    "@types/async": "^2.0.48",
    "@types/bcryptjs": "^2.4.1",
    "@types/chai": "^4.1.2",
    "@types/jsonwebtoken": "^7.2.6",
    "@types/knex": "^0.14.9",
    "@types/mocha": "^5.0.0",
    "@types/node": "^9.6.0",
    "@types/supertest": "^2.0.4",
    "body-parser": "^1.18.3",
    "chai": "^4.1.2",
    "cors": "^2.8.4",
    "express": "^4.16.4",
    "helmet": "^3.14.0",
    "husky": "^0.15.0-rc.13",
    "mocha": "^5.0.5",
    "morgan": "^1.9.1",
    "path": "^0.12.7",
    "prettier": "^1.11.1",
    "sinon": "^4.4.8",
    "supertest": "^3.0.0",
    "tsc-watch": "^1.0.17",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.10.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.7.2"
  },
  "engines": {
    "node": ">=8.10.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm test"
    }
  }
}
